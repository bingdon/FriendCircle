<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/head_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="TODO"
        android:scaleType="centerCrop"
        android:src="@drawable/user_bg" />

    <ImageView
        android:id="@+id/user_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="170dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <include
        android:id="@+id/cir_visit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:layout_marginTop="140dp"
        layout="@layout/user_head_label"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/notice_fra"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="215dp"
        android:background="@drawable/notice_sec"
        android:clickable="true"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/notice_count"
            style="@style/Small_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/biao2"
            android:gravity="center"
            android:text=""
            android:visibility="gone" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="18dp"
            android:gravity="center"
            android:text="@string/aboutme"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="300dp"
        android:drawableRight="@drawable/camera_sec"
        android:text="@string/today"
        android:visibility="gone"
        android:drawablePadding="18dp"
        android:textSize="25sp" />

</FrameLayout>